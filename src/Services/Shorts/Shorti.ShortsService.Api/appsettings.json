{
  "ConnectionStrings": {
    "ShortsContext": "Server=(localdb)\\mssqllocaldb;Database=Shorti.ShortsVideo;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "FileDownloader": {
    "FilesPath": "wwwroot\\shorts"
  },

  "FileValidatorSettings": {
    "ValidFileTypes": [
      ".jpeg",
      ".png",
      ".bmp",
      ".svg"
    ],
    "MaxFileSettings": 128064
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
